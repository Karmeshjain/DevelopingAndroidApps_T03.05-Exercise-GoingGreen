<?xml version="1.0" encoding="UTF-8"?>

<FrameLayout android:padding="16dp" android:layout_height="wrap_content" android:layout_width="match_parent" xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:textSize="42sp"
        android:fontFamily="monospace"
        android:layout_gravity="center_vertical|start"
        style="@style/TextAppearance.AppCompat.Title"
        android:id="@+id/tv_item_number"/>

    <TextView android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:fontFamily="monospace"
        android:layout_gravity="center_vertical|end"
        style="@style/TextAppearance.AppCompat.Title"
        android:id="@+id/tv_view_holder_instance"
        android:textColor="#000"/>

</FrameLayout>